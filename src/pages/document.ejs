<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Your App</title>
  <script>
    // 判断设备是PC端还是移动端
    function IsPC(){  
      var userAgentInfo = navigator.userAgent;
      var Agents = new Array("Android", "iPhone", "SymbianOS", "Windows Phone", "iPad", "iPod");  
      var flag = true;  
      for (var v = 0; v < Agents.length; v++) {  
          if (userAgentInfo.indexOf(Agents[v]) > 0) { flag = false; break; }  
      }  
      return flag;  
    }
    if(!IsPC()){
      // 移动端生成meta标签
      var meta = document.createElement("meta");  //创建一个meta标签
      meta.name = "viewport";
      meta.content = "width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, minimal-ui, viewport-fit=cover,user-scalable=no";
      document.getElementsByTagName('head')[0].appendChild(meta);
      // 移动端生成script标签 淘宝移动自适应方案
      var script = document.createElement("script");  //创建一个meta标签
      script.src = "http://g.tbcdn.cn/mtb/lib-flexible/0.3.2/??flexible_css.js,flexible.js";
      document.getElementsByTagName('head')[0].appendChild(script);
    }
  </script>
</head>
<body>
  <div id="root"></div>
</body>
</html>